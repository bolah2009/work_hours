<div class="bg-gray-50 dark:bg-slate-900 min-h-[100vh]">
  <!-- ========== MAIN CONTENT ========== -->
  <%= render partial: 'shared/sidebar' %>
  <!-- Content -->
  <div class="w-full pt-10 px-4 sm:px-6 md:px-8 lg:pl-72">
    <!-- Page Heading -->
    <header>
      <h1 class="block text-xl font-bold text-gray-700 sm:text-2xl dark:text-gray-300 mt-8"><%= @current_user.name %>'s Account</h1>
    </header>
    <!-- End Page Heading -->
  <main>
    <div class="flex">
      <div class="w-full sm:w-8/12 md:w-3/4 p-5">
        <%= form_with(model: @user, url: edit_password_path, method: :patch, class: "flex flex-col", data: {controller: :form, action: "turbo:submit-end->form#clear"}) do |form| %>
          <div class="flex rounded-lg shadow-sm mb-4">
            <%= form.label :old_password, 'Old password', class: "cursor-pointer px-4 inline-flex items-center min-w-fit rounded-s-md border border-e-0 border-gray-200 bg-gray-50 text-sm text-gray-500 dark:bg-gray-700 dark:border-gray-700 dark:text-gray-400" %>
            <%= form.password_field :old_password, autocomplete: 'current-password', placeholder: "•••••••••••••••", class: "py-2 px-3 pe-11 block w-full border-gray-200 shadow-sm rounded-e-lg text-sm focus:z-10 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600", required: true %>
          </div>

          <div class="flex rounded-lg shadow-sm mb-4">
            <%= form.label :password, 'New password', class: "cursor-pointer px-4 inline-flex items-center min-w-fit rounded-s-md border border-e-0 border-gray-200 bg-gray-50 text-sm text-gray-500 dark:bg-gray-700 dark:border-gray-700 dark:text-gray-400" %>
            <%= form.password_field :password, autocomplete: 'new-password', placeholder: "•••••••••••••••", class: "py-2 px-3 pe-11 block w-full border-gray-200 shadow-sm rounded-e-lg text-sm focus:z-10 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600", required: true %>
          </div>

          <div class="flex rounded-lg shadow-sm mb-4">
            <%= form.label :password_confirmation, 'Confirm new password', class: "cursor-pointer px-4 inline-flex items-center min-w-fit rounded-s-md border border-e-0 border-gray-200 bg-gray-50 text-sm text-gray-500 dark:bg-gray-700 dark:border-gray-700 dark:text-gray-400" %>
            <%= form.password_field :password_confirmation, autocomplete: 'new-password', placeholder: "•••••••••••••••", class: "py-2 px-3 pe-11 block w-full border-gray-200 shadow-sm rounded-e-lg text-sm focus:z-10 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600", required: true %>
          </div>

          <div>
            <%= form.submit 'Change Password', class: "cursor-pointer py-3 px-4 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-gray-100 text-gray-800 hover:bg-gray-200 disabled:opacity-50 disabled:pointer-events-none dark:bg-white/10 dark:hover:bg-white/20 dark:text-white dark:hover:text-white dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" %>
          </div>
        <% end %>
        <%= render partial: 'shared/form_notice', locals: { type: 'user_password', errors: nil } %>
      </div>
    </div>
  </main>
</div>
  <%= render partial: 'shared/notice' %>
